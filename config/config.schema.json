{
    "$schema": "http://json-schema.org/draft-04/schema",
    "definitions": {
        "gateway": {
            "type": "object",
            "properties": {
                "protocol": {
                    "type": "string",
                    "enum": ["tcp", "udp"]
                },
                "port": {
                    "type": "integer"
                },
                "host": {
                    "type": "string"
                }
            },
            "required": ["protocol", "port"]
        }
    },
    "properties": {
        "secret": {
            "type": "string"
        },
        "gateways": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/gateway"
            }
        },
        "easy": {
            "type": "boolean"
        }
    },
    "required": ["secret", "gateways"]
}