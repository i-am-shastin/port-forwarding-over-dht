{
    "compilerOptions": {
        "outDir": "build",
        "module": "ESNext",
        "target": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "checkJs": true,
        "baseUrl": ".",
        "paths": {
            "~enums": ["src/enums"],
            "~types": ["src/types"],
            "~utils/*": ["src/utils/*"],
            "~services/*": ["src/services/*"],
            "~src/*": ["src/*"],
            "~package": ["package.json"]
        }
    },
    "include": ["src/**/*", "*.mjs"]
}